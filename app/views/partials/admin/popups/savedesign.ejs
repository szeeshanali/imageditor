<div>
<div id="savedesignmodel" class="modal fade" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-vertical-center " role="document">
        <form method="post" onsubmit="onSaveDesignSubmit()">
            <div class="modal-content bd-0 tx-14">
                <div class="modal-header pd-y-20 pd-x-25">
                    <h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold">Save Design</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body pd-25">
                    <div class="form-layout">
                        <div class="row mg-b-25">
                            <div class="col-lg-6">
                                <div class="card">
                                    <img src="" id="previewcanvas">
                                        <input class="form-control" type="hidden" name="json" value="" id="inputcanvasjson" >
                                        <input class="form-control" type="hidden" name="base64" value="" id="inputcanvasbase64" >
                                    </div>

                                    </div>
                                    <div class="col-lg-6">
                                        <div class="row mg-b-25">

                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <input class="form-control" type="text" name="title" value="" placeholder="Enter Title"></div>
                                                </div>
                                                <!-- col-4 -->
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        <input class="form-control" type="text" name="description" value="" placeholder="Enter Description"></div>
                                                    </div>
                                                    <!-- col-4 -->
                                                    <div class="col-lg-12">
                                                        <div class="form-group mg-b-10-force">
                                                            <select id="selectCategory" class="form-control select2 select2-hidden-accessible" data-placeholder="" tabindex="-1" aria-hidden="true">
                                                                <option label="Choose category"></option>
                                                                <%for(var i=0; i<categories.length;i++) {%>
                                                                    <option value="<%= categories[i]._id %>"><%= categories[i].name %></option>
                                                                <%}%>
                                                            </select>
                                                            <input type="hidden" name="categoryId" id="categoryId"></div>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <label class="ckbox">
                                                                <input type="checkbox" name="editable"><span>Editable</span>
                                                            </label>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <label class="ckbox">
                                                                <input type="checkbox" name="paid"><span>Paid</span>
                                                            </label>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <label class="ckbox">
                                                                <input type="checkbox" name="active"><span>Active</span>
                                                            </label>
                                                        </div>
                                                        <!-- col-4 -->

                                                    </div>
                                                </div>
                                                <!-- row -->


                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-info pd-x-20">Save changes</button>
                                            <button type="button" class="btn btn-secondary pd-x-20" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- modal-dialog -->
                        </div>
                        <script>
                            $("#selectCategory").on("change", (e) => {
                                $("#categoryId").val(e.target.value);
                            })
                        </script>
</div>
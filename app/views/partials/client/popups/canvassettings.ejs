<div id="canvassettings" class="modal fade show">

    <div class="modal-dialog modal-ms" role="document">
        <div class="modal-content tx-size-sm">
            <form method="post" action="/app/workspace">

            <div class="modal-header pd-x-20">
                <h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold">Canvas Settings</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body pd-20">
                    <div class="form-layout">
                        <div class="row mg-b-25">
                            <div class="col-lg-12">
                                <div class="form-group mg-b-10-force">
                                    <label class="form-control-label">Title:
                                        <span class="tx-danger">*</span>
                                    </label>
                                    <input class="form-control" required maxlength="50" type="text" name="address" value="" placeholder="Enter title for your design."></div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group mg-b-10-force">
                                        <label class="form-control-label">Custom Sizes:
                                        </label>
                                        <select id="dropdownCanvasSize" class="form-control select2 select2-hidden-accessible " data-placeholder="Choose one (with optgroup)" tabindex="-1" aria-hidden="true">
                                            <option label="Choose one"></option>
                                            <optgroup label="A4 Size Paper">
                                                <option value="8.3x11.7">8.3" X 11.7"</option>
                                            </optgroup>
                                            <optgroup label="Letter Size Paper">
                                                <option value="8.5x11">8.5" X 11"</option>
                                            </optgroup>
                                            <optgroup label="Legal Size Paper">
                                                <option value="8.5x14">8.5" X 14"</option>
                                            </optgroup>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="form-control-label">Width  (inches):
                                            <span class="tx-danger">*</span>
                                        </label>
                                        <input class="form-control" min="2" max="20"  pattern="[0-9]+([,\.][0-9]+)?" required step="any" type="number" id="inputCanvasWidth" name="width" value="" placeholder="Enter Width">
                                        <small id="widthInchsToCM"></small>
                                    </div>
                                    
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label">Height (inches):
                                                <span class="tx-danger">*</span>
                                            </label>
                                            <input class="form-control" min="2" max="20" pattern="[0-9]+([,\.][0-9]+)?" required step="any" type="number" id="inputCanvasHeight" name="height" value="" placeholder="Enter Height">
                                            <small id="heightInchsToCM"></small>
                                        </div>
                                        

                                        </div>
                                        <!-- col-4 -->

                                    </div>
                                    <!-- row -->

                     </div>
            </div>
                        <!-- modal-body -->
                        <div class="modal-footer">
                            <button type="submit" id="btnStartDesigning" class="btn btn-info pd-x-20">Continue</button>
                            <button type="button" class="btn btn-secondary pd-x-20" data-dismiss="modal">Close</button>
                        </div>
                        </form>

                    </div>
                </div>
                <!-- modal-dialog -->

            </div>

    <div class="col-lg-6 pd-x-15">
        <div class="card pd-10 tx-primary tx-bold bd-b mg-b-15">Manage Banners</div>

        <div class="card " >
          <div class="workarea" >
              <div  id="canvas-holder">
                  <div class="content tx-center">
                      <canvas id="admin-main-canvas" width="500" height="400" style="margin-top:20px; background-color:transparent; border:solid 1px #ccc;  box-shadow: 3px 5px #ccc;" ></canvas>
                  </div>
              </div>
          </div>
      </div>
       
        </div>
     
        <div class="col-lg-3">
          <div class="row" id="bannerThumbs">
            <%banners?.forEach((item)=>{%>
              <div class="col-lg-6 pd-1">
                <div class="card bd-0"  >
                  <div >
                    <div style="position: absolute;right:0;top:0; width:50px"><i title="Disabled" class="<%=item.active?'hidden':''%> tx-danger tx-22 ion-eye-disabled"></i></div>
                  <img class="card-img-top img-fluid"   src="<%=item.path?.replace('../app/public','')%>" alt="Image">
                </div>
                  <div class="card-body bd bd-t-0">
                    <span class="tx-12"><%=item.ref_code??'main-page'%></span>
                    <h6 class="mg-b-3"><a href="" class="tx-dark"><%=item.title%></a></h6>
                    <span class="tx-12"><%=item.link%></span>
                    <div class="btn-group">


                      <button type="button" id="<%=item._id%>" data-meta="<%=JSON.stringify({ref_code:item.ref_code,title:item.title,link:item.link, path:item.path,active:item.active})%>" class="btn btn-sm btn-success tx-12 tx-bold tx-uppercase edit">Edit</button>
                      <button type="button" id="<%=item.code%>" class="btn btn-sm btn-warning tx-12 tx-bold tx-uppercase delete">Delete</button>
                    </div>
                  </div>
                </div>
              </div>
          
            <%})%>
          </div>
        </div>
    </div>
  
    </div>
